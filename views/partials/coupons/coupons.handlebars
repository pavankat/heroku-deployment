
<ul> //coupons.handlebars
{{#each coupons}}
	
	<li>
		{{#if ../purchase_coupon}}
			{{#if ../../logged_in}} <!-- if you want to access properties in a partial, you must go up -->
				<form data-couponid="{{this.id}}">
					<input type="number" placeholder="purchase quantity?">
					<input type="submit" class="purchaseCoupon" value="purchase">
				</form>

				<form action="/votes/create" method="POST">
					<input name="coupon_id" type="hidden" value="{{this.id}}">
					<input type="submit" value="VOTE">
				</form>

			{{else}}
				<p>Login to buy this coupon :)</p>
			{{/if}}
		{{/if}}

		{{foo this.item}}

		{{#if this.quantity}}
			Quantity Purchased: {{this.quantity}}
		{{/if}}
		<br>

		Votes: 
		{{#if this.vote_count}}
			{{this.vote_count}}
		{{else}}
			0
		{{/if}}
		<br>
		Item: {{this.item}}
		<br>
		Price: {{this.price}}
		<br>
		Expiration Date: {{this.expiration_date}}
		<br>
		Company Name: {{this.company_name}}
		<br>
		Coupon Code: {{this.coupon_code}}
	</li>

{{/each}}
</ul>